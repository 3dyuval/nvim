{
  "semi": true,
  "singleQuote": false,
  "quoteProps": "as-needed",
  "trailingComma": "es5",
  "tabWidth": 2,
  "useTabs": false,
  "printWidth": 80,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": [
        "*.vue"
      ],
      "options": {
        "parser": "vue",
        "singleAttributePerLine": true,
        "vueIndentScriptAndStyle": false
      }
    },
    {
      "files": [
        "*.html"
      ],
      "options": {
        "parser": "html",
        "singleAttributePerLine": true
      }
    }
  ]
}
