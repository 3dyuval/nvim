{
	"$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"attributePosition": "multiline",
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "es5",
			"attributePosition": "auto"
		}
	},
	"overrides": [
		{
			"includes": ["*.tsx", "*.jsx"],
			"formatter": {
				"lineWidth": 100,
				"indentWidth": 4,
				"formatWithErrors": false
			},
			"javascript": {
				"formatter": {
					"bracketSameLine": false,
					"bracketSpacing": true,
					"jsxQuoteStyle": "double",
					"attributePosition": "auto"
				}
			}
		}
	],
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on"
				}
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"useImportType": "info"
			},
			"nursery": {
				"useSortedClasses": "error"
			}
		}
	}
}
