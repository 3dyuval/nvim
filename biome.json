{
	"$schema": "https://biomejs.dev/schemas/2.0.5/schema.json",
	"files": {
		"ignoreUnknown": true,
		"experimentalScannerIgnores": ["node_modules"]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"attributePosition": "multiline",
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"lineEnding": "lf"
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"jsxQuoteStyle": "double",
			"quoteStyle": "single",
			"quoteProperties": "asNeeded",
			"semicolons": "always",
			"trailingCommas": "none"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							"react",
							"react-*",
							"@angular",
							"@angular/*",
							"vue",
							"vue-*",
							":PACKAGE:",
							":ALIAS:",
							":PATH:"
						]
					}
				}
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"suspicious": {
				"noExplicitAny": "off"
			},
			"style": {
				"useImportType": "info"
			},
			"nursery": {
				"useSortedClasses": "error"
			}
		}
	}
}
